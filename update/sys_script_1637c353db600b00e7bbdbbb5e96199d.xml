        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	//la presente business rule sirve para setear el valor del campo "assigned to" de los registros de "candidates validation requests" asociados a un "candidates validation plan", el usuario en el plan debe de ser el mismo que en la peticiÃ³n.
	
	var plan = current.sys_id;
	var plan_assigned_to = current.assigned_to;
	
	var cvr = new GlideRecord('x_attme_microwaves_candidate_validation_request');
	cvr.addQuery('candidates_validation_plan', plan);
	cvr.query();
	
	while(cvr.next())
	{
			cvr.assigned_to = plan_assigned_to;
		    cvr.update();
	}
	
})(current, previous);]]></script>
